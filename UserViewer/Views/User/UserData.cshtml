@model UserViewer.ViewModels.UserViewModel

@if (ViewBag.Error != null)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <h2 class="display-4">@Html.DisplayFor(model => model.Name)</h2>

            @if (Model.Location != null)
            {
                <p class="lead mb-0">@Html.DisplayFor(model => model.Location)</p><br />

            }
        </div>
        <div class="col-md-4 text-right">
            <img src="@Model.Avatar" alt="Avatar" class="img-thumbnail mb-4" style="width:150px; height:150px;" />
        </div>

        <div class="col-12">
            <div class="row">
                @Html.DisplayFor(model => model.Repos)
            </div>
        </div>
    </div>
}