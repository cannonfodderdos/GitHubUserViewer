@model UserViewer.ViewModels.UserViewModel

@if (ViewBag.Error != null)
{
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger">
                @ViewBag.Error
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12 col-md-6">
            <h2 class="display-4">@Html.DisplayFor(model => model.Name)</h2>
            @Html.DisplayFor(model => model.Location)
            <img src="@Model.Avatar" alt="Avatar" class="img-thumbnail" style="width:200px; height:200px;" />
        </div>
        <div class="col-12 col-md-6">
        </div>
    </div>
}